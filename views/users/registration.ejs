<%- include('../_header') %>

<div class="container">
    <div class="row my-5">
        <div class="col-4 offset-4">

            <h1 class="display-5 text-center text-muted p-2 mb-5">User Registration</h1>

            <div class="bg-light p-5 shadow">


                <form action="/users/registration" method="POST">
                    <div class="form-group">
                        <label for="firstname">Firstname</label>
                        <input type="text" class="form-control" name="firstname" id="firstname" placeholder="e.g Ramadhani">
                    </div>

                    <div class="form-group">
                        <label for="middlename">Middlename</label>
                        <input type="text" class="form-control" name="middlename" id="middlename" placeholder="e.g Juma">
                    </div>

                    <div class="form-group">
                        <label for="firstname">Lastname</label>
                        <input type="text" class="form-control" name="lastname" id="lastname" placeholder="e.g Shemahonge">
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email"  class="form-control" name="email" id="email" placeholder="e.g ramashema@domain.com">
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password">
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" class="btn btn-success" role="button" value="Register">
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>


