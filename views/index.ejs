<%- include('_header') %>
<div class="container">
    <div class="row my-5">
        <div class="col-6 offset-3">
            <div class="text-center">
                <h1 class="display-5 text-muted">Simple Project Task Manager</h1>

                <div class="jumbotron">
                <p>Organize and Share your tasks in a simple and efficient way</p>
                <small>Let you collaborate with other in achieving your goals</small>
                </div>

                <% if(!currentUser){ %>
                    <div class="my-4">
                        <a href="/users/login" class="btn btn-success mx-1">Login</a>
                        <a href="/users/registration" class="btn btn-primary mx-1">Register</a>
                    </div>
                <% } else { %>
                    <p class="text-center">
                        <a href="/home" role="button" class="btn btn-primary my-5" >My Projects</a>
                    </p>
                <% } %>

            </div>
        </div>
    </div>
</div>
