<h1>Edit subtasks</h1>
<p><a href="/home">Home</a></p>
<div>
    <!-- This div holds error and info messages -->
    <% if(errors.length) { %>
        <p><%= errors %></p>
    <% } %>

    <% if(infos.length) { %>
        <p><%= infos %></p>
    <% } %>
</div>
<b>Task:</b> <%= task.title %><br>
<form action="/tasks/subtasks/edit/<%= subtask.id %>" method="post">
    <!--<input type="hidden" name="task" value="<%= task.id %>">-->
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= subtask.title %>">
    </div>

    <div>
        <label for="description">Description</label>
        <textarea id="description" name="description"><%= subtask.description %></textarea>
    </div>

    <div>
        <label for="duedate">Due date</label>
        <input type="text" name="duedate" id="duedate" value="<%= subtask.dueAt %>" readonly>
    </div>

    <div>
        <label for="extendeddue">Due date</label>
        <input type="date" name="extendeddue" id="extendeddue" value="<%= subtask.extendedTo %>">
    </div>

    <div>
        <input type="submit" value="Edit subtask" role="button">
    </div>
</form>